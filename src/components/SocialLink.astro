---
import { Icon } from "astro-icon/components"

export interface Props {
  href: string
  text: string
  icon: string
}

const { href, text, icon } = Astro.props
---

<a target="_blank" rel="noopener noreferer" {href}>
  <span class="sr-only">{text}</span>
  <Icon
    class="h-auto w-8 transition-opacity hover:opacity-50"
    name={icon}
    aria-hidden="true"
  />
</a>
